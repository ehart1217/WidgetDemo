<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.wanchi.myapplication"
    android:sharedUserId="android.uid.system">

    <uses-permission android:name="android.permission.BIND_APPWIDGET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!--******** gallery  *************-->
        <activity android:name=".gallery.GalleryMain"></activity>
        <activity android:name=".gallery.GalleyWidgetsActivity"
            android:theme="@style/AppThemeFullScreen">
        </activity>
        <!--******** Widget   *************-->
        <activity android:name=".widget.WidgetMainActivity">
        </activity>
        <activity android:name=".widget.ChooseWidgetActivity"/>
    </application>

</manifest>